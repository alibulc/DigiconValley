<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity3">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#4CAF50"
        android:text="Initial Diagnostic"/>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Info"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="#2196F3"
        />

    <TextView
        android:id="@+id/name"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
    <TextView
        android:id="@+id/ContactNo"
        android:text="Contact No."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
    <TextView
        android:id="@+id/Gender"
        android:text="Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
    <TextView
        android:id="@+id/AgeGroup"
        android:text="Age Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Symtoms"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="#2196F3"
        />

    <TextView
        android:id="@+id/BasciSymtomsCheckBoxText"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ohter Symtoms"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="#2196F3"
        />

    <TextView
        android:id="@+id/other_smmm"
        android:text="Other Symtoms Textfield Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vitals"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="#2196F3"
        />

    <TextView
        android:id="@+id/VitalsIfChecked"
        android:text="Vitals If Checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"

        />
</LinearLayout>

    <Button
        android:id="@+id/editButton"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textColor="#CCE4B1"
        android:background="#2196F3"
        android:text="Edit Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        />
</RelativeLayout>