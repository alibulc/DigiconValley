<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:padding="8dp"
        android:textSize="24dp"
        android:textColor="#2196F3"
        android:text="Symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <View
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        />
    <TextView
        android:padding="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Symtoms" />

    <CheckBox
        android:layout_marginLeft="16dp"
        android:id="@+id/fever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fever" />

    <CheckBox
        android:layout_marginLeft="16dp"
        android:id="@+id/headache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Head Ache" />

    <CheckBox
        android:layout_marginLeft="16dp"
        android:id="@+id/sour_throat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sour Throat" />
    <CheckBox
        android:layout_marginLeft="16dp"
        android:id="@+id/abdomainal_pain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abdominal Pain" />
    <CheckBox
        android:layout_marginLeft="16dp"
        android:id="@+id/fatigue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fatigue" />
    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any Other" />
    <EditText
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="text"
        android:id="@+id/any_ohter"
        />


</LinearLayout>
<Button
    android:layout_margin="16dp"
    android:id="@+id/back_button"
    android:text="Back"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="16dp"
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next"
        />
</RelativeLayout>